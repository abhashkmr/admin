{
    "compilerOptions": {
      "target": "ES6",                 /* Specifies the ECMAScript target version */
      "module": "commonjs",            /* Specifies the module system */
      "outDir": "./dist",              /* Output directory for transpiled files */
      "rootDir": "./src",              /* Root directory of the TypeScript source files */
      "strict": true,                  /* Enables strict type-checking */
      "esModuleInterop": true          /* Enables compatibility with CommonJS modules */
    },
    "include": [
      "src/**/*.ts"                   /* List of files to be included in compilation */
    ],
    "exclude": [
      "node_modules"                  /* List of files/folders to be excluded from compilation */
    ]
  }
  